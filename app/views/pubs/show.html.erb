<p id="notice"><%= notice %></p>
<h1><%= @pub.title %></h1>

<div class="well">
  <p>
  <strong>Description:</strong>
  <%= @pub.description %>
</p>

<p>
  <strong>Place:</strong>
  <%= @pub.place %>
</p>

<p>
  <strong>Address:</strong>
  <%= @pub.address %>
</p>
</div>

<% if current_user %>
<div class="well">
<table border="0" width="200" height="50">
  <tr>
    <td>
      <% if current_user %>
          <strong>Bewertung:</strong> <%= rating_for @pub, 'score', :disable_after_rate => false, :cancel => false%>
      <% end %>
    </td>
  </tr>
</table>
</div>
<br>
<%= render partial: "comments/comments", locals: {commentable: @pub} %>
<%= render partial: "comments/form", locals: {commentable: @pub} %>

<%= link_to 'Edit', edit_pub_path(@pub) %> |
<% end %>

<%= link_to 'Back', pubs_path %>
