<h1>Diskotheken</h1>
<div class="well">
<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @discotheks.each do |discothek| %>
      <tr>
        <td><%= discothek.title %></td>
        <td><%= link_to 'Show', discothek %></td>
        <td><% if current_user.present? %>
              <%= link_to 'Edit', edit_discothek_path(discothek) %>
          <% else %>
              &nbsp;
          <% end %>
        </td>
        <td><% if current_user.present? %>
              <%= link_to 'Destroy', discothek, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
              &nbsp;
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<br>

<% if current_user %>
<%= link_to 'New Discothek', new_discothek_path %> |
<% end %>

<%= link_to 'Back', pages_home_path %>
</div>