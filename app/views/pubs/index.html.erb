<h1>Pub's</h1>

<div class="well">
<table class="table table-striped">

  <% @pubs.each do |pub| %>
      <tr>
        <td><%= pub.title %></td>
        <td><%= link_to 'Show', pub %></td>
        <td><% if current_user.present? %>
              <%= link_to 'Edit', edit_pub_path(pub) %>
          <% else %>
              &nbsp;
          <% end %>
        </td>
        <td><% if current_user.present? %>
              <%= link_to 'Destroy', pub, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
              &nbsp;
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<br>

<% if current_user %>
<%= link_to 'New Pub', new_pub_path %> |
<% end %>

<%= link_to 'Back', pages_home_path %>

</div>