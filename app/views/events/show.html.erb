<%= javascript_include_tag 'ratyrate.js.erb', "data-turbolinks-track" => false %>

<h1><%= @event.title %></h1>
<div class="well">
<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Place:</strong>
  <%= @event.place %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.address %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.time %>
</p>
  </div>
<% if current_user %>
<div class="well">
<table border="0" width="200" height="50">
  <tr>
    <td>
    <strong>Bewertung:</strong> <%= rating_for @event, 'score', :disable_after_rate => false, :cancel => false%>
    </td>
  </tr>
</table>
</div>

<br>

<%= render partial: "comments/comments", locals: {commentable: @event} %>
<%= render partial: "comments/form", locals: {commentable: @event} %>


<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>

<%= link_to 'Back', events_path %>
</div>
